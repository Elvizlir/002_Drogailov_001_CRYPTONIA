mixin s-reviews()
	// start s-reviews
	+b.SECTION.s-reviews.section.block-with-lazy#s-reviews&attributes(attributes)
		.container
			.row
				.col-12.col-lg-5(class="wow fadeInRight" data-wow-duration="2s")
					//- .test-block
					+e.H2.title Отзывы
					.swiper-block
						.reviews-container
							.swiper-wrapper
								.swiper-slide
									+e.item
										+e.item-text Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Lorem ipsum dolor sit amet.
										+e.item-name -  Артур Дубасов
										+e.item-subname Директор компании
								.swiper-slide
									+e.item
										+e.item-text Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Lorem ipsum dolor sit amet.
										+e.item-name -  Артур Дубасов
										+e.item-subname Директор компании
							+b.swiper-btn-block
								+e.btn-prev#reviews-prev
								+e.btn-next#reviews-next
					+e.text Мы будем рады вашему отзыву о работе с нами!
					+e.A.btn.main-btn.popup-with-move-anim(href="#modal-call-2") Оставить отзыв
				.col-12.col-lg-7.order-lg-first(class="wow fadeInLeft" data-wow-duration="1s")
					+e.image-block 
						+pic("","s-service-small-1","png")(class="small-pic first-pic")
						+pic("","s-service-small-2","png")(class="small-pic second-pic")
						+pic("","s-service-small-3","png")(class="small-pic third-pic")
						+pic("","s-service-big-1","png")(class="big-pic")
	// end s-reviews